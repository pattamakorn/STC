<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="#976324"
    tools:context=".selectSTDtrans">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">

        <RelativeLayout
            android:background="@drawable/bgpro"
            android:gravity="center"
            android:id="@+id/toppagelayout"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="รายชื่อนักเรียนของคุณ"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="30sp"
                android:textColor="#fff"/>

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/toppagelayout"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/recyclerselectstdtrans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>